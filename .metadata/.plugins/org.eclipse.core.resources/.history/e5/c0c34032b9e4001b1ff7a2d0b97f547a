package com.generics;

import java.util.Scanner;

public class FindingMaxValue {

	public Integer maxOfInteger(Integer a1, Integer a2, Integer a3) {
		Integer max = a1;
		if (a2.compareTo(max) > 0)
			max = a2;
		if (a3.compareTo(max) > 0)
			max = a3;
		return max;

	}
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		findMaxNumber findingMax = new findMaxNumber();
		System.out.println("Enter three integer values: ");
		Integer x1 = sc.nextInt();
		Integer x2 = sc.nextInt();
		Integer x3 = sc.nextInt();

		int intMax = findingMax.maxOfInteger(x1, x2, x3);
		System.out.println("Maximum value is : " + intMax);
		sc.close();

	}

}