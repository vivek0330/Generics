package com.generics;

import java.lang.Array;
import java.util.Scanner;

public class findMax<E extends Comparable> {
	E[] elements;

	public findMax(E[] elements) {
		super();
		this.elements = elements;
	}

	public static <E extends Comparable> E comparesion(E... elements) {
		Array.sort(elements);
		int lenght = elements.length;
		E max = elements[lenght - 1];
		return max;
	}

	public static void main(String[] args) {
		Integer[] max_int_number = { 1, 82, 5, 80, 4, 87, 100, 58 };
		System.out.println("Maximum value is: " + comparesion(max_int_number));

		Double[] max_double_number = { 1.6, 87.8, 82.8, 80.2, 4.8 };
		System.out.println("Maximum value is: " + comparesion(max_double_number));

		String[] max_string_number = { "A", "A", "C", "B", "N" };
		System.out.println("Maximum value is: " + comparesion(max_string_number));

	}
}